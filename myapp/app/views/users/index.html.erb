<h1><%=h @current_goal ? @current_goal.name : "All"%> users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Bio</th>
    <th>Goals</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=link_to user.name, user %></td>
    <td><%=h user.position %></td>
    <td><%=h user.bio %></td>
    <td><%=h user.goals.join(", ") %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>
