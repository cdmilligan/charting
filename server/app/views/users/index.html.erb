<h1><%=h @current_goal ? @current_goal.name : "All"%> people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Position</th>
    <th>Bio</th>
    <th>Goals</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=link_to user.name, user %></td>
    <td><%=h user.position %></td>
    <td><%=h user.bio %></td>
    <td>
      | 
      <% user.goals.each do |goal| %>
        <%=link_to goal.name, goal_notes_path(goal) %> |
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @users %>
