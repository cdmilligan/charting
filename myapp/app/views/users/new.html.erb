<h1>Register</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :new_password, "Password" %><br />
    <%= f.password_field :new_password %>
  </p>

  <p>
    <%= f.label :new_password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :new_password_confirmation %>
  </p>
  <p>
    <%= f.label :position %><br />
    <%= f.text_field :position %>
  </p>
  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio, :rows => 3 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
