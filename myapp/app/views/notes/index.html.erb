<h1><%=h @current_goal ? @current_goal.name : "All"%> notes</h1>

<table>
  <tr>
    <th>Note</th>
    <th>Source</th>
    <th>Creator</th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%=link_to note.truncated_body, note %></td>
    <td><%=link_to note.source, note.source %></td>
    <td><%=h note.user %></td>
    <td><%= link_to 'Remove', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_note_path %>
