<h1><%=h @current_goal ? @current_goal.name : "All"%> sources</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Doctype</th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%=h source.title %></td>
    <td><%=link_to source.location %></td>
    <td><%=h source.doctype %></td>
    <td><%= link_to 'delete', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New source', new_source_path %>
