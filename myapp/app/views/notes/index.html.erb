<h1>Listing notes</h1>

<table>
  <tr>
    <th>Body</th>
    <th>Source</th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%=h note.body %></td>
    <td><%=h note.source %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New note', new_note_path %>