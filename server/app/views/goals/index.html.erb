<table class="no-borders">


<% @goals.each do |goal| %>
  <tr>
    <td><b><%=link_to goal.name, goal_notes_path(goal) %></b></td>
    <td><div id="actions"><%= link_to 'Edit', edit_goal_path(goal) %> |
        <%= link_to 'Remove', goal, :confirm => 'Are you sure?', :method => :delete %>
      </div>
    </td>
  </tr>
  <tr>

    <td>Owned by:
      <% if @current_user == goal.admin %>
        <%= link_to "You", user_path(@current_user) %>
      <% else %>
        <%= link_to goal.admin.name, user_path(goal.admin) %>
      <% end %>
    </td>




    <td>Subscribers:
      <% if goal.subscribers.blank? %>
      none
      <% else %>
       <% goal.subscribers.each do |sub| %>
       <%= link_to sub.name, user_path(sub) %>&nbsp;
       <% end %>
     <% end %>
    </td>
  </tr>
  <tr>
    <td colspan="2" class="spacer"></td>
  </tr>

  <% if @current_goal and not @all_goals.include? @current_goal %>
    <!--td><!--%= link_to 'adopt', adopt_goal_path(@current_goal), :class => 'bluebutton right' %--><!--/td-->
    <!--td><%= link_to_button('Adopt this Goal', adopt_goal_path(@current_goal), "bluebutton right") %></td-->
  <% end %>
  
<% end %>
</table>

<br />

<%= will_paginate @goals %>