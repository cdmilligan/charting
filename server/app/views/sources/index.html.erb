<h1><%=h @current_goal ? @current_goal.name : "All"%> sources</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Doctype</th>
  </tr>

<% @sources.each do |source| %>
  <tr>
    <td><%=h source %></td>
    <td><%=link_to source.location, source.location %></td>
    <td><%=h source.doctype %></td>
    <td>
    <%= link_to 'Edit', edit_source_path(source) %>
    <%= link_to 'Delete', source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @sources %>
